<h1>Listing locations</h1>
<%= link_to 'New Location', new_location_path %> 
<table>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
 
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td><%= link_to 'Show', location_path(location) %></td>
      <td><%= link_to 'Edit', edit_location_path(location) %></td>
      <td><%= link_to 'Delete', location_path(location),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this location?' } %></td>
    </tr>
  <% end %>
</table>